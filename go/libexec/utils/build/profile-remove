#!/bin/sh
set -u

sess=${1:?'session name?'}
builddir=${2:?'build dir?'}

sessname="internal-${sess}"
schroot_cmd='schroot -d /root -u root'

${schroot_cmd} -b -c internal-uwspkg -n ${sessname} >/dev/null
schroot_sess="${schroot_cmd} -r -c ${sessname}"

${schroot_sess} -- /uwspkg/libexec/internal/profile-remove ${sess} ${builddir}
exit_status=$?

${schroot_cmd} -e -c ${sessname}
exit ${exit_status}
